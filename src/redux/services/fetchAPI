export const tokenFetch = async () => {
  try {
    const response = await fetch('https://opentdb.com/api_token.php?command=request');
    const token = await response.json();
    return token;
  } catch (error) {
    console.error(error);
  }
};

export const fetchQuestions = async () => {
  try {
    const tokenRequest = await tokenFetch();
    localStorage.setItem('token', tokenRequest.token);
    const responseQuestions = await fetch(`https://opentdb.com/api.php?amount=5&token=${tokenRequest.token}`);
    const questions = await responseQuestions.json();
    return questions;
  } catch (error) {
    console.error(error);
  }
};
